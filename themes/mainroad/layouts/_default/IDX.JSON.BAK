{
	"siteTitle": "{{ .Site.Title }}",
	"homepageContent": "{{ .Content | plainify }}",
	"allPages": [
		{{ $totalPages := len .Site.RegularPages }}
		{{ range $index, $page := .Site.RegularPages }}
		{
			"title": {{ $page.Title | jsonify }},
			"url": {{ $page.Permalink | jsonify }},
			"content": {{ $page.Content | jsonify }},
			"type": {{ $page.Type | jsonify }},
			"date": {{ $page.Date.Format "Jan _2 2006" | jsonify }}
		}{{ if ne $index (sub $totalPages 1) }},{{ end }}
		{{ end }}
	],

	"taxonomies": {
		{{ $allTaxonomies := .Site.Taxonomies }}
		{{ $taxonomyCount := len $allTaxonomies }}
		{{ $counter := 0 }}
		{{ range $taxonomyName, $terms := $allTaxonomies }}
		"{{ $taxonomyName }}": [
			{{ range $i, $term := $terms.ByCount }}
			{
				"name": "{{ $term.Name }}",
				"count": {{ $term.Count }}
			}{{ if ne $i (sub (len $terms) 1) }},{{ end }}
			{{ end }}
		]{{ $counter = add $counter 1 }}{{ if ne $counter $taxonomyCount }},{{ end }}
		{{ end }}
	}

}
