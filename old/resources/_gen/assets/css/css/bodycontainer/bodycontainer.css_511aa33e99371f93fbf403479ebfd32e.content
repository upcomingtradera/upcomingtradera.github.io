.bodyContainer{display:grid;grid-template-columns:1fr;grid-template-rows:auto}.mainContainer{grid-row:2}.leftSidebarContainer{grid-row:3}.rightSidebarContainer{grid-row:4}@media only screen and (min-width:600px){.bodyContainer{background-color:red}}@media only screen and (min-width:768px){.bodyContainer{background-color:green}}@media only screen and (min-width:992px){.bodyContainer{background-color:#ff0}}@media only screen and (min-width:1200px){.bodyContainer{background-color:purple}}