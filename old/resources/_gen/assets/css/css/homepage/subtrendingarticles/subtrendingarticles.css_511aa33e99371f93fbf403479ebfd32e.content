.subTrendingArticlesHomepage{display:grid;grid-column-gap:.25em;grid-row-gap:.15em;grid-template-columns:repeat(8,1fr);grid-auto-rows:minmax(1fr,auto)}.subTrendingArticleItem{grid-column:span 4;display:grid;grid-template-columns:repeat(8,1fr);grid-auto-rows:auto}.subTrendingArticleHeadline{white-space:nowrap;overflow:hidden;text-overflow:ellipsis;font-size:.95em;grid-column:span 4;grid-row:1;grid-column:1/-1;margin-left:.15em}.subTrendingArticleImageLink{grid-row:2;grid-column:1/-1}.subTrendingArticleSplashImage{height:150px;width:auto;object-fit:cover}