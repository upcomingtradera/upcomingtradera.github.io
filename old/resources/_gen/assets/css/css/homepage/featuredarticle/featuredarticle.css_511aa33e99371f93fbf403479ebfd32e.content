.featuredArticleContainer{display:grid;grid-template-columns:repeat(8,auto);grid-template-rows:repeat(8,auto);padding-bottom:1em}.featuredArticleSplashLink,.featuredArticleSplashImage{grid-column:1/-1;grid-row:1/-1;width:100%;height:100%;object-fit:cover}.featuredArticleHeadline,.featuredArticleIntroBlurb{grid-column:1/-1;padding-left:.15em}.featuredArticleHeadline{font-size:.95em;font-weight:900;grid-row:8;color:#eaeceb;background-color:rgba(14,23,27,.75);padding:.25em 0 .15em .15em}.featuredArticleHeadlineHighlightedWord{text-transform:uppercase;color:#3ec9e4}.featuredArticleIntroBlurb{grid-row:9}.featuredArticleIntroBlurb::first-letter{padding-left:.25em;font-size:1.25em;font-weight:900;color:#3ec9e4}.featuredArticleContinue{line-height:1.5em;font-weight:900;color:#ffcd6d}