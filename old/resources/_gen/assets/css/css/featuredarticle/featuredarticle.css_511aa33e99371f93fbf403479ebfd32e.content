.featuredArticleContainer{display:grid;grid-template-columns:repeat(8,auto);grid-template-rows:repeat(8,auto);padding-bottom:1em;border-bottom:.05em solid #0f171a}.featuredArticleSplashLink{grid-column:2/1;grid-row:1/-1}.featuredArticleSplashImage{grid-column:2/1;grid-row:1/-1}.featuredArticleHeadline{font-size:2.5em;font-weight:900;grid-row:8;grid-column:1/-1;color:#eaeceb;background-color:rgba(14,23,27,.75);padding-left:.15em;padding-bottom:.15em;padding-top:.25em;margin-bottom:.35em}.featuredArticleHeadlineHighlightedWord{text-transform:uppercase;color:#3ec9e4}.featuredArticleIntroBlurb{grid-row:9;grid-column:1/-1;padding-left:.15em}.featuredArticleIntroBlurb::first-letter{padding-left:.25em;font-size:1.25em;font-weight:900;color:#3ec9e4}.featuredArticleContinue{font-weight:900;color:#ffcd6d}